{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["@tsconfig/bun/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true
	},
	// override to include js files
	"include": [
		"**/*.js",
		"**/*.mjs",
		"**/*.cjs",
		"**/*.ts",
		"**/*.mts",
		"**/*.cts"
	]
}
